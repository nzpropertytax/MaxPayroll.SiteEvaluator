@page
@model MaxPayroll.SiteEvaluator.Pages.SiteEvaluator.EvaluationWizardModel
@{
    ViewData["Title"] = "Site Evaluation Wizard";
    var step = Model.CurrentStep;
    var evaluation = Model.WizardState.Evaluation;
    var propertyMatch = Model.WizardState.PropertyMatch;
}

<link rel="stylesheet" href="~/css/site-evaluator-wizard.css" asp-append-version="true" />

<div class="evaluation-wizard">
    <!-- Wizard Header -->
    <div class="wizard-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="mb-0">
                        <i class="fa fa-search-location text-primary me-2"></i>
                        Site Evaluation Wizard
                    </h1>
                    <p class="text-muted mb-0">Step through property due diligence</p>
                </div>
                <div class="text-end">
                    @if (!string.IsNullOrEmpty(Model.WizardState.Address?.FullAddress))
                    {
                        <div class="badge bg-light text-dark">
                            <i class="fa fa-map-marker-alt me-1"></i>
                            @(Model.WizardState.Address.FullAddress.Length > 40 ? Model.WizardState.Address.FullAddress.Substring(0, 40) + "..." : Model.WizardState.Address.FullAddress)
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Progress Stepper -->
    <div class="wizard-progress bg-light py-3 border-bottom">
        <div class="container">
            <div class="stepper">
                @foreach (var config in Model.StepConfigs)
                {
                    var isActive = config.StepNumber == step;
                    var isCompleted = config.StepNumber < step;
                    var stepClass = isActive ? "active" : (isCompleted ? "completed" : "");
                    
                    <div class="step @stepClass" data-step="@config.StepNumber">
                        <div class="step-indicator">
                            @if (isCompleted)
                            {
                                <i class="fa fa-check"></i>
                            }
                            else
                            {
                                <i class="fa @config.Icon"></i>
                            }
                        </div>
                        <div class="step-label">@config.Label</div>
                        @if (config.StepNumber < 8)
                        {
                            <div class="step-connector"></div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Alerts -->
    <div class="container mt-3">
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fa fa-exclamation-circle me-2"></i>@Model.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @Model.SuccessMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
    </div>

    <!-- Wizard Content -->
    <div class="wizard-content py-4">
        <div class="container">
            @switch (step)
            {
                case 1:
                    @await Html.PartialAsync("_Step1Address", Model)
                    break;
                case 2:
                    @await Html.PartialAsync("_Step2PropertyMatch", Model)
                    break;
                case 3:
                    @await Html.PartialAsync("_Step3Zoning", Model)
                    break;
                case 4:
                    @await Html.PartialAsync("_Step4Hazards", Model)
                    break;
                case 5:
                    @await Html.PartialAsync("_Step5Geotech", Model)
                    break;
                case 6:
                    @await Html.PartialAsync("_Step6Infrastructure", Model)
                    break;
                case 7:
                    @await Html.PartialAsync("_Step7Climate", Model)
                    break;
                case 8:
                    @await Html.PartialAsync("_Step8Summary", Model)
                    break;
            }
        </div>
    </div>
</div>

<!-- Help Toggle Button -->
<button type="button" class="help-toggle-btn" onclick="SiteEvaluatorWizard.openHelp('step-@step')" title="Help">
    <i class="fa fa-question"></i>
</button>

@section Scripts {
<script src="~/js/admin/flow-stepper.js" asp-append-version="true"></script>
<script src="~/js/site-evaluator-wizard.js" asp-append-version="true"></script>
<script>
    // Initialize wizard with current step
    document.addEventListener('DOMContentLoaded', function() {
        SiteEvaluatorWizard.init({
            currentStep: @step,
            totalSteps: 8
        });
    });
</script>
}
