@page
@model MaxPayroll.SiteEvaluator.Pages.SiteEvaluator.EvaluationWizardModel
@{
    ViewData["Title"] = "Site Evaluation Wizard";
    var step = Model.CurrentStep;
    var evaluation = Model.WizardState.Evaluation;
    var propertyMatch = Model.WizardState.PropertyMatch;
}

<div class="evaluation-wizard">
    <!-- Wizard Header -->
    <div class="wizard-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="mb-0">
                        <i class="fa fa-search-location text-primary me-2"></i>
                        Site Evaluation Wizard
                    </h1>
                    <p class="text-muted mb-0">Step through property due diligence</p>
                </div>
                <div class="text-end">
                    @if (!string.IsNullOrEmpty(Model.WizardState.Address?.FullAddress))
                    {
                        <div class="badge bg-light text-dark">
                            <i class="fa fa-map-marker-alt me-1"></i>
                            @(Model.WizardState.Address.FullAddress.Length > 40 ? Model.WizardState.Address.FullAddress.Substring(0, 40) + "..." : Model.WizardState.Address.FullAddress)
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Progress Stepper -->
    <div class="wizard-progress bg-light py-3 border-bottom">
        <div class="container">
            <div class="stepper">
                @foreach (var config in Model.StepConfigs)
                {
                    var isActive = config.StepNumber == step;
                    var isCompleted = config.StepNumber < step;
                    var stepClass = isActive ? "active" : (isCompleted ? "completed" : "");
                    
                    <div class="step @stepClass" data-step="@config.StepNumber">
                        <div class="step-indicator">
                            @if (isCompleted)
                            {
                                <i class="fa fa-check"></i>
                            }
                            else
                            {
                                <i class="fa @config.Icon"></i>
                            }
                        </div>
                        <div class="step-label">@config.Label</div>
                        @if (config.StepNumber < 8)
                        {
                            <div class="step-connector"></div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Alerts -->
    <div class="container mt-3">
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fa fa-exclamation-circle me-2"></i>@Model.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @Model.SuccessMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
    </div>

    <!-- Wizard Content -->
    <div class="wizard-content py-4">
        <div class="container">
            @switch (step)
            {
                case 1:
                    @await Html.PartialAsync("_Step1Address", Model)
                    break;
                case 2:
                    @await Html.PartialAsync("_Step2PropertyMatch", Model)
                    break;
                case 3:
                    @await Html.PartialAsync("_Step3Zoning", Model)
                    break;
                case 4:
                    @await Html.PartialAsync("_Step4Hazards", Model)
                    break;
                case 5:
                    @await Html.PartialAsync("_Step5Geotech", Model)
                    break;
                case 6:
                    @await Html.PartialAsync("_Step6Infrastructure", Model)
                    break;
                case 7:
                    @await Html.PartialAsync("_Step7Climate", Model)
                    break;
                case 8:
                    @await Html.PartialAsync("_Step8Summary", Model)
                    break;
            }
        </div>
    </div>
</div>

<style>
    .evaluation-wizard {
        min-height: 100vh;
        background: #f8f9fa;
    }
    
    .wizard-header {
        background: white;
        padding: 1.5rem 0;
        border-bottom: 1px solid #dee2e6;
    }
    
    /* Stepper Styles */
    .stepper {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        max-width: 900px;
        margin: 0 auto;
    }
    
    .step {
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
        flex: 1;
    }
    
    .step-indicator {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: #e9ecef;
        color: #6c757d;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1rem;
        z-index: 2;
        transition: all 0.3s ease;
    }
    
    .step.active .step-indicator {
        background: var(--bs-primary, #0d6efd);
        color: white;
        box-shadow: 0 0 0 4px rgba(13, 110, 253, 0.2);
    }
    
    .step.completed .step-indicator {
        background: #198754;
        color: white;
    }
    
    .step-label {
        margin-top: 0.5rem;
        font-size: 0.75rem;
        font-weight: 500;
        color: #6c757d;
        text-align: center;
    }
    
    .step.active .step-label {
        color: var(--bs-primary, #0d6efd);
        font-weight: 600;
    }
    
    .step.completed .step-label {
        color: #198754;
    }
    
    .step-connector {
        position: absolute;
        top: 20px;
        left: calc(50% + 25px);
        width: calc(100% - 50px);
        height: 2px;
        background: #e9ecef;
        z-index: 1;
    }
    
    .step.completed .step-connector {
        background: #198754;
    }
    
    /* Wizard Cards */
    .wizard-card {
        background: white;
        border-radius: 0.5rem;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        padding: 2rem;
        margin-bottom: 1.5rem;
    }
    
    .wizard-card-header {
        display: flex;
        align-items: center;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #e9ecef;
    }
    
    .wizard-card-header h3 {
        margin: 0;
        font-size: 1.25rem;
    }
    
    .wizard-card-header .icon {
        width: 48px;
        height: 48px;
        border-radius: 0.5rem;
        background: var(--bs-primary, #0d6efd);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        margin-right: 1rem;
    }
    
    /* Data Cards within wizard */
    .data-section {
        background: #f8f9fa;
        border-radius: 0.375rem;
        padding: 1rem;
        margin-bottom: 1rem;
    }
    
    .data-section h5 {
        font-size: 0.875rem;
        font-weight: 600;
        color: #495057;
        margin-bottom: 0.75rem;
    }
    
    .data-item {
        display: flex;
        justify-content: space-between;
        padding: 0.5rem 0;
        border-bottom: 1px solid #e9ecef;
    }
    
    .data-item:last-child {
        border-bottom: none;
    }
    
    .data-label {
        color: #6c757d;
        font-size: 0.875rem;
    }
    
    .data-value {
        font-weight: 500;
        color: #212529;
        font-size: 0.875rem;
    }
    
    /* Status Badges */
    .status-badge {
        display: inline-flex;
        align-items: center;
        padding: 0.25rem 0.75rem;
        border-radius: 1rem;
        font-size: 0.75rem;
        font-weight: 500;
    }
    
    .status-badge.complete { background: #d1e7dd; color: #0f5132; }
    .status-badge.partial { background: #fff3cd; color: #664d03; }
    .status-badge.missing { background: #f8d7da; color: #842029; }
    .status-badge.low-risk { background: #d1e7dd; color: #0f5132; }
    .status-badge.medium-risk { background: #fff3cd; color: #664d03; }
    .status-badge.high-risk { background: #f8d7da; color: #842029; }
    
    /* Navigation Buttons */
    .wizard-nav {
        display: flex;
        justify-content: space-between;
        padding-top: 1.5rem;
        border-top: 1px solid #e9ecef;
        margin-top: 1.5rem;
    }
    
    /* Address Autocomplete */
    .address-input-container {
        position: relative;
    }
    
    .address-suggestions {
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        background: white;
        border: 1px solid #dee2e6;
        border-top: none;
        border-radius: 0 0 0.375rem 0.375rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        max-height: 300px;
        overflow-y: auto;
        z-index: 1000;
        display: none;
    }
    
    .address-suggestions.show { display: block; }
    
    .address-suggestion {
        padding: 0.75rem 1rem;
        cursor: pointer;
        border-bottom: 1px solid #f0f0f0;
    }
    
    .address-suggestion:hover,
    .address-suggestion.active {
        background: #f8f9fa;
    }
    
    .address-suggestion .address-main {
        font-weight: 500;
    }
    
    .address-suggestion .address-secondary {
        font-size: 0.85rem;
        color: #6c757d;
    }
    
    /* Property Match Cards */
    .property-match-card {
        border: 2px solid #e9ecef;
        border-radius: 0.5rem;
        padding: 1rem;
        cursor: pointer;
        transition: all 0.2s ease;
        margin-bottom: 0.75rem;
    }
    
    .property-match-card:hover {
        border-color: var(--bs-primary, #0d6efd);
        background: #f8f9fa;
    }
    
    .property-match-card.selected {
        border-color: var(--bs-primary, #0d6efd);
        background: rgba(13, 110, 253, 0.05);
    }
    
    .property-match-card input[type="radio"] {
        display: none;
    }
    
    .match-confidence {
        font-size: 0.75rem;
        padding: 0.125rem 0.5rem;
        border-radius: 1rem;
    }
    
    .confidence-high { background: #d1e7dd; color: #0f5132; }
    .confidence-medium { background: #fff3cd; color: #664d03; }
    .confidence-low { background: #f8d7da; color: #842029; }
    
    /* Responsive */
    @@media (max-width: 768px) {
        .stepper {
            flex-wrap: nowrap;
            overflow-x: auto;
            padding-bottom: 0.5rem;
        }
        
        .step {
            min-width: 80px;
        }
        
        .step-connector {
            display: none;
        }
        
        .step-label {
            font-size: 0.65rem;
        }
    }
</style>

@section Scripts {
<script src="~/js/admin/flow-stepper.js"></script>
<script>
(function() {
    'use strict';
    
    // Initialize FlowStepper
    const stepper = new FlowStepper({
        wizardId: 'site-evaluator-wizard',
        currentStep: @step,
        totalSteps: 8
    });

    // Address autocomplete functionality
    const addressInput = document.getElementById('address');
    const suggestionsContainer = document.getElementById('addressSuggestions');
    
    if (addressInput && suggestionsContainer) {
        let debounceTimer;
        let suggestions = [];
        let currentIndex = -1;

        function debounce(func, wait) {
            return function(...args) {
                clearTimeout(debounceTimer);
                debounceTimer = setTimeout(() => func.apply(this, args), wait);
            };
        }

        async function fetchSuggestions(query) {
            if (!query || query.length < 3) {
                suggestionsContainer.classList.remove('show');
                return;
            }

            suggestionsContainer.innerHTML = '<div class="p-3 text-muted"><i class="fa fa-spinner fa-spin"></i> Searching...</div>';
            suggestionsContainer.classList.add('show');

            try {
                const response = await fetch('/api/siteevaluator/address/autocomplete?q=' + encodeURIComponent(query));
                if (!response.ok) throw new Error('API error');
                
                suggestions = await response.json();
                renderSuggestions();
            } catch (error) {
                console.error('Autocomplete error:', error);
                suggestionsContainer.innerHTML = '<div class="p-3 text-muted">Unable to load suggestions</div>';
            }
        }

        function renderSuggestions() {
            if (suggestions.length === 0) {
                suggestionsContainer.innerHTML = '<div class="p-3 text-muted">No addresses found</div>';
                return;
            }

            suggestionsContainer.innerHTML = suggestions.map((s, i) => `
                <div class="address-suggestion" data-index="${i}">
                    <div class="address-main">${escapeHtml(s.fullAddress)}</div>
                    <div class="address-secondary">${[s.suburb, s.city].filter(Boolean).join(', ')}</div>
                </div>
            `).join('');

            suggestionsContainer.querySelectorAll('.address-suggestion').forEach(el => {
                el.addEventListener('click', () => selectSuggestion(parseInt(el.dataset.index)));
            });

            currentIndex = -1;
        }

        function selectSuggestion(index) {
            if (index >= 0 && index < suggestions.length) {
                addressInput.value = suggestions[index].fullAddress;
                suggestionsContainer.classList.remove('show');
            }
        }

        function escapeHtml(text) {
            if (!text) return '';
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        addressInput.addEventListener('input', debounce(function() {
            fetchSuggestions(this.value.trim());
        }, 300));

        addressInput.addEventListener('keydown', function(e) {
            if (!suggestionsContainer.classList.contains('show')) return;

            const items = suggestionsContainer.querySelectorAll('.address-suggestion');
            
            switch(e.key) {
                case 'ArrowDown':
                    e.preventDefault();
                    currentIndex = Math.min(currentIndex + 1, items.length - 1);
                    updateActiveItem(items);
                    break;
                case 'ArrowUp':
                    e.preventDefault();
                    currentIndex = Math.max(currentIndex - 1, -1);
                    updateActiveItem(items);
                    break;
                case 'Enter':
                    if (currentIndex >= 0) {
                        e.preventDefault();
                        selectSuggestion(currentIndex);
                    }
                    break;
                case 'Escape':
                    suggestionsContainer.classList.remove('show');
                    break;
            }
        });

        function updateActiveItem(items) {
            items.forEach((item, i) => {
                item.classList.toggle('active', i === currentIndex);
                if (i === currentIndex) {
                    item.scrollIntoView({ block: 'nearest' });
                }
            });
        }

        document.addEventListener('click', function(e) {
            if (!addressInput.contains(e.target) && !suggestionsContainer.contains(e.target)) {
                suggestionsContainer.classList.remove('show');
            }
        });
    }

    // Property match card selection
    document.querySelectorAll('.property-match-card').forEach(card => {
        card.addEventListener('click', function() {
            document.querySelectorAll('.property-match-card').forEach(c => c.classList.remove('selected'));
            this.classList.add('selected');
            const radio = this.querySelector('input[type="radio"]');
            if (radio) radio.checked = true;
        });
    });
})();
</script>
}
