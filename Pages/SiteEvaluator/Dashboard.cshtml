@page "/SiteEvaluator/Dashboard"
@model MaxPayroll.SiteEvaluator.Pages.SiteEvaluator.DashboardModel
@using MaxPayroll.SiteEvaluator.Models

@{
    ViewData["Title"] = "Site Evaluator Dashboard";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="mb-1">
                        <i class="fa fa-tachometer-alt text-primary me-2"></i>
                        Dashboard
                    </h1>
                    <p class="text-muted mb-0">Manage your site evaluations and reports</p>
                </div>
                <div>
                    <a asp-page="/SiteEvaluator/EvaluationWizard" class="btn btn-primary">
                        <i class="fa fa-plus me-1"></i> New Evaluation
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Alerts -->
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fa fa-check-circle me-2"></i>@Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fa fa-exclamation-circle me-2"></i>@Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-primary bg-opacity-10 rounded-3 p-3">
                                <i class="fa fa-briefcase fa-2x text-primary"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h3 class="mb-0">@Model.Stats.TotalJobs</h3>
                            <p class="text-muted mb-0">Total Jobs</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-success bg-opacity-10 rounded-3 p-3">
                                <i class="fa fa-check-circle fa-2x text-success"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h3 class="mb-0">@Model.Stats.CompletedJobs</h3>
                            <p class="text-muted mb-0">Completed</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-warning bg-opacity-10 rounded-3 p-3">
                                <i class="fa fa-spinner fa-2x text-warning"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h3 class="mb-0">@Model.Stats.InProgressJobs</h3>
                            <p class="text-muted mb-0">In Progress</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-info bg-opacity-10 rounded-3 p-3">
                                <i class="fa fa-file-pdf fa-2x text-info"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h3 class="mb-0">@Model.Stats.TotalReports</h3>
                            <p class="text-muted mb-0">Reports Generated</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Jobs List -->
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="fa fa-list me-2"></i>Recent Jobs</h5>
                        <div class="d-flex gap-2">
                            <!-- Search -->
                            <form method="get" class="d-flex gap-2">
                                <input type="text" name="SearchQuery" class="form-control form-control-sm" 
                                       value="@Model.SearchQuery" placeholder="Search..." style="width: 150px;" />
                                <select name="StatusFilter" class="form-select form-select-sm" style="width: 130px;">
                                    <option value="">All Status</option>
                                    <option value="Complete" selected="@(Model.StatusFilter == "Complete")">Complete</option>
                                    <option value="InProgress" selected="@(Model.StatusFilter == "InProgress")">In Progress</option>
                                    <option value="Created" selected="@(Model.StatusFilter == "Created")">Created</option>
                                    <option value="Cancelled" selected="@(Model.StatusFilter == "Cancelled")">Cancelled</option>
                                </select>
                                <button type="submit" class="btn btn-sm btn-outline-secondary">
                                    <i class="fa fa-filter"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (Model.RecentJobs.Count == 0)
                    {
                        <div class="text-center py-5">
                            <i class="fa fa-folder-open fa-3x text-muted mb-3"></i>
                            <h5>No jobs found</h5>
                            <p class="text-muted">Start your first evaluation to see jobs here.</p>
                            <a asp-page="/SiteEvaluator/EvaluationWizard" class="btn btn-primary">
                                <i class="fa fa-plus me-1"></i> Create First Job
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Reference</th>
                                        <th>Address</th>
                                        <th>Customer</th>
                                        <th>Status</th>
                                        <th>Date</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var job in Model.RecentJobs)
                                    {
                                        var statusClass = job.Status switch
                                        {
                                            JobStatus.Complete => "bg-success",
                                            JobStatus.InProgress or JobStatus.DataCollection => "bg-warning text-dark",
                                            JobStatus.Cancelled => "bg-secondary",
                                            _ => "bg-info"
                                        };
                                        
                                        <tr>
                                            <td>
                                                <a asp-page="/SiteEvaluator/JobDetails" asp-route-jobId="@job.Id" class="fw-bold text-decoration-none">
                                                    @job.JobReference
                                                </a>
                                            </td>
                                            <td>
                                                <span title="@job.Address">
                                                    @(job.Address.Length > 30 ? job.Address.Substring(0, 30) + "..." : job.Address)
                                                </span>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(job.CustomerName))
                                                {
                                                    <span>@job.CustomerName</span>
                                                    if (!string.IsNullOrEmpty(job.CustomerCompany))
                                                    {
                                                        <br /><small class="text-muted">@job.CustomerCompany</small>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge @statusClass">@job.Status</span>
                                                @if (job.Reports.Count > 0)
                                                {
                                                    <span class="badge bg-light text-dark ms-1" title="@job.Reports.Count report(s)">
                                                        <i class="fa fa-file-pdf"></i> @job.Reports.Count
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <small class="text-muted">@job.CreatedDate.ToString("dd MMM yyyy")</small>
                                            </td>
                                            <td class="text-end">
                                                <div class="btn-group btn-group-sm">
                                                    <a asp-page="/SiteEvaluator/JobDetails" asp-route-jobId="@job.Id" 
                                                       class="btn btn-outline-primary" title="View">
                                                        <i class="fa fa-eye"></i>
                                                    </a>
                                                    @if (job.Status != JobStatus.Complete)
                                                    {
                                                        <a asp-page="/SiteEvaluator/EvaluationWizard" asp-route-jobId="@job.Id" 
                                                           class="btn btn-outline-success" title="Continue">
                                                            <i class="fa fa-play"></i>
                                                        </a>
                                                    }
                                                    @if (job.Status != JobStatus.Cancelled)
                                                    {
                                                        <form method="post" asp-page-handler="DeleteJob" class="d-inline">
                                                            <input type="hidden" name="jobId" value="@job.Id" />
                                                            <button type="submit" class="btn btn-outline-danger" title="Cancel" 
                                                                    onclick="return confirm('Cancel this job?')">
                                                                <i class="fa fa-times"></i>
                                                            </button>
                                                        </form>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        @if (Model.TotalPages > 1)
                        {
                            <div class="card-footer bg-white">
                                <nav>
                                    <ul class="pagination pagination-sm mb-0 justify-content-center">
                                        <li class="page-item @(Model.PageNumber <= 1 ? "disabled" : "")">
                                            <a class="page-link" asp-page="/SiteEvaluator/Dashboard" 
                                               asp-route-PageNumber="@(Model.PageNumber - 1)"
                                               asp-route-StatusFilter="@Model.StatusFilter"
                                               asp-route-SearchQuery="@Model.SearchQuery">
                                                <i class="fa fa-chevron-left"></i>
                                            </a>
                                        </li>
                                        @for (var i = 1; i <= Model.TotalPages; i++)
                                        {
                                            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                                <a class="page-link" asp-page="/SiteEvaluator/Dashboard" 
                                                   asp-route-PageNumber="@i"
                                                   asp-route-StatusFilter="@Model.StatusFilter"
                                                   asp-route-SearchQuery="@Model.SearchQuery">@i</a>
                                            </li>
                                        }
                                        <li class="page-item @(Model.PageNumber >= Model.TotalPages ? "disabled" : "")">
                                            <a class="page-link" asp-page="/SiteEvaluator/Dashboard" 
                                               asp-route-PageNumber="@(Model.PageNumber + 1)"
                                               asp-route-StatusFilter="@Model.StatusFilter"
                                               asp-route-SearchQuery="@Model.SearchQuery">
                                                <i class="fa fa-chevron-right"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Usage/Subscription Card -->
            @if (Model.Usage != null)
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-white">
                        <h5 class="mb-0"><i class="fa fa-chart-pie me-2"></i>Usage</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>Subscription</span>
                            <span class="badge bg-primary">@Model.Usage.Tier</span>
                        </div>
                        @if (!Model.Usage.IsUnlimited)
                        {
                            <div class="mb-3">
                                <div class="d-flex justify-content-between small mb-1">
                                    <span>Searches this month</span>
                                    <span>@Model.Usage.SearchesUsed / @Model.Usage.SearchesLimit</span>
                                </div>
                                <div class="progress" style="height: 8px;">
                                    <div class="progress-bar @(Model.Usage.UsagePercent > 80 ? "bg-warning" : "bg-success")" 
                                         style="width: @Model.Usage.UsagePercent%"></div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <p class="text-success mb-2"><i class="fa fa-infinity me-1"></i> Unlimited searches</p>
                        }
                        <div class="small text-muted">
                            <i class="fa fa-calendar me-1"></i> Resets @Model.Usage.ResetDate.ToString("dd MMM yyyy")
                        </div>
                    </div>
                </div>
            }

            <!-- Recent Locations -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fa fa-map-marker-alt me-2"></i>Recent Locations</h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.RecentLocations.Count == 0)
                    {
                        <div class="p-3 text-center text-muted">
                            No locations yet
                        </div>
                    }
                    else
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var location in Model.RecentLocations)
                            {
                                <li class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <div class="fw-semibold small">
                                                @(location.Address.Length > 35 ? location.Address.Substring(0, 35) + "..." : location.Address)
                                            </div>
                                            <small class="text-muted">
                                                @location.Suburb, @location.City
                                            </small>
                                        </div>
                                        <span class="badge bg-light text-dark" title="@location.JobCount job(s)">
                                            @location.JobCount
                                        </span>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fa fa-bolt me-2"></i>Quick Actions</h5>
                </div>
                <div class="card-body d-grid gap-2">
                    <a asp-page="/SiteEvaluator/EvaluationWizard" class="btn btn-outline-primary">
                        <i class="fa fa-magic me-2"></i>Start Wizard
                    </a>
                    <a asp-page="/SiteEvaluator/Index" class="btn btn-outline-secondary">
                        <i class="fa fa-search me-2"></i>Quick Search
                    </a>
                </div>
            </div>

            <!-- Admin Settings (Admin only) -->
            @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
            {
                <div class="card shadow-sm">
                    <div class="card-header bg-white">
                        <h5 class="mb-0"><i class="fa fa-cogs me-2"></i>Administration</h5>
                    </div>
                    <div class="card-body d-grid gap-2">
                        <a href="/SiteEvaluator/Admin/Settings" class="btn btn-outline-secondary">
                            <i class="fa fa-wrench me-2"></i>Service Settings
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
